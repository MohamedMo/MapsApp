<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:background="#F24A4383"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="GPS finder"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:layout_marginRight="10dp"

            android:gravity="center"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:id="@+id/textView2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
         />



    </LinearLayout>




<LinearLayout
    android:layout_width="500dp"
    android:layout_height="40dp">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:id="@+id/pb1"
                android:layout_marginLeft="80dp"/>
        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewLat"
        android:layout_marginLeft="70dp"

        />
</FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/loadingPanel2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:id="@+id/pb2"
                android:layout_marginLeft="110dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewLong"
            android:layout_marginLeft="70dp"

            />
    </FrameLayout>


</LinearLayout>





    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="You are at "
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/textNotice"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Address"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/gps_address"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Postal code"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/gps_postal"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="City"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/gps_city"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Country"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/gps_country"/>


  </LinearLayout>
